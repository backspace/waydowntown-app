<div class="bg-purple-300 p-1" {{did-insert this.vibrateIfRepresenting}} data-test-active-game>
  Game in progress: <span data-test-concept-name>{{@game.incarnation.concept.name}}</span>
  <p data-test-instructions>
    Instructions: {{@game.instructions}}
  </p>
  <p data-test-time-remaining>
    {{pluralize (moment-diff this.gameClock.date @game.endsAt precision="seconds" interval=200) "second"}} remaining
  </p>

  {{#if this.isRepresenting}}
    {{#let (component (concat "concepts/" @game.incarnation.concept.id)) as |Game|}}
      <Game @game={{@game}} />
    {{/let}}
  {{else}}
    <p>You are not representing your team in this game</p>
  {{/if}}

  <GameResults @game={{@game}} />

  {{#if @game.incarnation.credit}}
    <p data-test-credit>
      Credit: {{@game.incarnation.credit}}
    </p>
  {{/if}}
</div>
