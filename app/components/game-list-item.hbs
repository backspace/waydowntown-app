<li class="border border-black p-1" data-test-game-id={{@game.id}}>
  <p>Game name: <span data-test-concept-name>{{@game.incarnation.concept.name}}</span></p>

  {{#if this.canAccept}}
    <button class="border border-black" {{on "click" (perform this.acceptGame)}} data-test-accept>Accept</button>
  {{/if}}

  {{#if this.canArrive}}
    <button class="border border-black" {{on "click" (perform this.arriveGame)}} data-test-arrive>Arrive</button>
  {{/if}}

  <ul>
    {{#each this.otherTeams as |team|}}
      <li data-test-team-id={{team.id}}>Team: <span data-test-team-name>{{team.name}}</span></li>
    {{/each}}
  </ul>

  {{#if @game.beginsAt}}
    <p data-test-begins-at>Begins in {{moment-diff (now interval=200) @game.beginsAt precision="seconds" interval=200}} seconds</p>
  {{/if}}
</li>
